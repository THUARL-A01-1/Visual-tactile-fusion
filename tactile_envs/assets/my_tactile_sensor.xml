<mujoco>
    <asset>
        <!-- 定义 STL 文件 -->
        <mesh name="my_mesh" file="/Users/xiaokangsun/local_py_proj/tactile_env/tactile_envs/assets/insertion/assets/softbody.stl"/>
    </asset>

    <worldbody>
        <!-- 定义几何体并将其与传感器绑定 -->
        <body name="sensor_body">
            <geom name="sensor_geom" type="mesh" mesh="my_mesh" pos="0 0 0" euler="0 0 0"/>
            <site name="touch_site" pos="0 0 0" size="0.01"/>
        </body>
    </worldbody>

    <sensor>
        <!-- 绑定自定义传感器插件 -->
        <plugin name="tactile_sensor" plugin="my_tactile_sensor.MyTactileSensor" objtype="site" objname="touch_site">
            <config key="size" value="20 20"/>
            <config key="fov" value="14 23"/>
            <config key="gamma" value="0"/>
            <config key="nchannel" value="3"/>
        </plugin>
    </sensor>
</mujoco>